<div class="flex flex-col gap-1">
  <label class="mb-1 font-light text-sm"><%= label %></label>
  <% if type == "select"%>
    <%= f.select field, options %>
  <% elsif type == "textarea"%>
    <%= f.text_area field, :class => "tinymce" %>
  <% elsif type == "datetime_field"%>
    <%= f.datetime_field :published_at, type: type, placeholder: placeholder, class: "published_at" %>
  <% else %>
    <%= f.text_field field, type: type, placeholder: placeholder, :autofocus => true, class: "w-full text-sm font-medium text-black px-6 py-1 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  <% end %>
</div>