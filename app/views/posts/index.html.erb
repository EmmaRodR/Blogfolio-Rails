<div class="flex flex-col justify-center items-start gap-4 mb-10">
  <div class="flex flex-row items-center gap-6 ml-4">
    <%= render partial: "shared/title" , locals: {title: t('articles.title') } %>
    <% if user_signed_in? %>
      <%= render partial: "shared/button" , locals: {post: @post, submit_text:"New Post",path: new_post_path, method: :get,
    confirm: false} %>
    <% end %>
  </div>
  <div class="flex flex-wrap justify-center items-center gap-6">
    <%= render partial: "posts/postscards" %>
  </div>
</div>