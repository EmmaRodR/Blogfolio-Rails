<div data-controller="posts" class="gap-6 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 p-4">
  <% @posts.each do |post| %>
    <% next if post.nil? %>
    <div data-posts-target="fade" class="flex flex-col justify-between gap-4 opacity-0 shadow-md p-4 rounded-lg max-w-sm h-[320px] font-sans transition-all translate-y-6 duration-500 post-card">
      <div class="flex flex-row justify-between items-center mb-2">
        <p class="font-mono text-xs">
          <%= post.published_at.strftime("%d/%m/%Y") if post.published_at %>
        </p>
        <div class="bg-white px-2 py-1 rounded w-fit font-mono text-[10px] category-tag">
          <%= t("articles.#{post.slug}.category", default: post.category.capitalize) %>
        </div>
      </div>
      <h2 class="font-mono text-lg">
        <%= t("articles.#{post.slug}.title", default: post.title) %>
      </h2>
      <p class="text-xs line-clamp-4">
        <%= t("articles.#{post.slug}.description", default: post.description) %>
      </p>
      <h2 class="mt-10 text-sm">
        <%= render "shared/arrowbutton", text: "Leer el articulo completo", path: post_path(post.slug), show_icon: true, extra_classes: "bg-transparent font-sans hover:underline hover:decoration-cyan-500" %>
      </h2>
    </div>
  <% end %>
</div>