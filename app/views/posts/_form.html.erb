<%= form_with(model: resource, method: method, url: url, data: {
  controller: "flatpickr",turbo: "true"
}) do |f| %>
  <div class="flex flex-col gap-10 bg-black/20 px-6 py-10 border-[1px] border-white/20 rounded-2xl">
    <%= render "devise/shared/error_messages" , resource: resource %>
    <% fields.each do |field| %>
      <%= render partial: "shared/input" , locals: { f: f, field: field[:name], type: field[:type], label:
          field[:label], options: field[:options], placeholder: field[:placeholder] } %>
    <% end %>
    <div class="actions">
      <%= render partial: "shared/button" , locals: { submit_text: submit_text,path: url, method: method,
    confirm: false} %>    </div>
  <% end %>
</div>