<div data-controller="work" class="relative flex flex-col items-center justify-center w-full h-auto gap-10 p-10 mx-auto mt-6 font-sans rounded-2xl">
  <h2 data-work-target="fade" class="text-4xl font-bold font-mono mb-[40px] opacity-0 translate-y-6 transition-all duration-700">
    <%= t('articles.work-from-finance-to-qa-professional.title') %> </h2>
  <div data-work-target="fade" class="flex flex-col h-full max-w-3xl gap-8 text-base leading-relaxed text-left transition-all duration-700 translate-y-6 opacity-0">
    <%= render partial: "custom_posts/worktext"%>
    <h2 data-work-target="fade" class="mt-10 mb-8 font-mono text-3xl text-center">
      Donde he trabajado</h2>
    <div class="grid grid-cols-1 gap-10 justify-items-center xl:grid-cols-1 md:xl:grid-cols-1">
      <%= render partial: "custom_posts/experiencecard", locals: { experiences: @experiences}%>
    </div>
  </div>
  <div class="flex flex-col items-center justify-center mb-[100px]">
    <%= render partial: "posts/return" %>
  </div>
</div>