<div class="flex flex-col justify-start items-center shadow-lg p-4 border rounded-lg w-[600px] transition-all duration-300 skill-card">
  <div class="flex flex-row justify-start items-center gap-4 mb-4 p-2 w-full">
    <div class="flex rounded-2xl w-fit h-8">
      <%= image_tag(asset_path(iconurl)) rescue image_tag("default_icon.svg", class: "p-2 rounded-2xl") %>
    </div>
    <p class="font-mono font-light text-sm whitespace-nowrap"><%= name %></p>
  </div>
  <p class="p-2 font-mono text-xs"><%= description %></p>
</div>
